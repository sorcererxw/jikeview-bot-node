{
  "name": "jikeview-bot",
  "version": "1.0.0",
  "description": "A Telegram bot that can fetch Jike post for you.",
  "author": "sorcererxw",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "ffmpeg-static": "^2.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "node-fetch": "^2.5.0",
    "node-telegram-bot-api": "^0.30.0"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^2.0.0",
    "@types/fluent-ffmpeg": "^2.1.9",
    "@types/lodash": "^4.14.129",
    "@types/node-fetch": "^2.3.3",
    "@types/node-telegram-bot-api": "^0.31.0",
    "jest": "^24.8.0",
    "nodemon": "^1.13.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-jike-node": "0.0.17",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc",
    "build": "(rm -r dist || true) && yarn run tslint && yarn run build-ts",
    "debug": "yarn run build && yarn run watch-debug",
    "test": "yarn run build && node dist/test",
    "start": "yarn run build && node dist/src/app.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  }
}
